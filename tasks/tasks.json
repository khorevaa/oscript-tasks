{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Создание приложения .exe",
            "name": "make",
            "command": "oscript",
            "type": "process",
            "args": [
                "-encoding=utf-8",
                "-make",
                ".\/src\/cmd\/tasks.os",
                ".\/bin\/tasks.exe"
            ],
            "options": {
                "РабочаяОбласть": "${workspace}",
                "bin": "${workspace}\/bin"
            }
        },
        {
            "label": "тестирование проекта",
            "name": "test",
            "command": "oscript",
            "type": "process",
            "command-args": [
                "-encoding=utf-8",
                "tasks\/test.os"
            ]
        },
        {
            "name": "build-opm",
            "command": "opm",
            "type": "process",
            "args": [
                "build",
                "."
            ],
            "options": {
                "РабочаяОбласть": "${workspace}",
                "bin": "${workspace}\/bin"
            }
        },
        {
            "name": "build",
            "command": "oscript",
            "type": "process",
            "options": {
                "РабочаяОбласть": ""
            },
            "tasks": [
                "make",
                "build-opm"
            ]
        },
        {
            "name": "deploy",
            "command": "opm",
            "type": "process",
            "args": [
                "p",
                "-c",
                "stable",
                ".\/tasks.ospx"
            ],
            "options": {
                "РабочаяОбласть": ""
            }
        },
        {
            "label": "deploy",
            "name": "deploy-dev",
            "command": "opm",
            "type": "process",
            "args": [
                "p",
                "-c",
                "dev",
                ".\/tasks.ospx"
            ],
            "options": {
                "РабочаяОбласть": ""
            },
            "env": {
                "HUB": "local-hub.com"
            }
        },
        {
            "name": "run",
            "command": "oscript",
            "type": "process",
            "args": [
                "${workspace}/bin/"
            ],
            "env": {
                "HUB": "$LOL"
            },
            "options": {
                "workspace": "${workspace}/${HUB}"
            },
            "command-args": [
                "-encoding=utf-8",
                "tasks\/run.os"
            ]
        }
    ]
}